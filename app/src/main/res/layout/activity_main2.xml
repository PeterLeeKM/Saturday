<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main2"
    android:orientation="vertical"
    android:background="#96e1c8"
    android:gravity="top">

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <Button
            android:id="@+id/mypage"
            android:text="@string/mypage"
            android:onClick="myPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/logout"
            android:text="@string/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="logOut"/>

    </LinearLayout>

    <ScrollView android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_likefirst"
                android:maxHeight="150dp"
                android:maxWidth="150dp"
                android:adjustViewBounds="true"
                android:layout_margin="10dp"
                android:onClick="selectSpon"/>

            <ImageView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hutwater"
                android:maxHeight="150dp"
                android:maxWidth="150dp"
                android:adjustViewBounds="true"
                android:layout_margin="10dp"
                android:onClick="selectSpon"/>

            <ImageView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_kleenex"
                android:maxHeight="150dp"
                android:maxWidth="150dp"
                android:adjustViewBounds="true"
                android:layout_margin="10dp"
                android:onClick="selectSpon"/>

            <ImageView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_imperial"
                android:maxHeight="150dp"
                android:maxWidth="150dp"
                android:adjustViewBounds="true"
                android:layout_margin="10dp"
                android:onClick="selectSpon"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
